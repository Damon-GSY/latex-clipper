{
  "manifest_version": 3,
  "name": "LaTeX Copy Helper",
  "version": "1.3.0",
  "description": "自动识别页面上的 LaTeX 公式（MathJax 和 KaTeX），鼠标悬停显示复制按钮，双击公式即可复制。",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
